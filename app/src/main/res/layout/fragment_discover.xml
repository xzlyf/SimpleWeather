<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/money_gif"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/clock_in_btn"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/clock_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/top_button_shap"
        android:visibility="gone"
        style="@style/roundbutton"
        android:text="打卡"/>
    <TextView
        android:id="@+id/clock_date_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="已连续打卡2天"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/tab"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/clock_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离周五还有4天,稳住！"
        android:layout_below="@+id/clock_date_num"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginTop="30dp"/>

</RelativeLayout>